@page "/shopping_cart"
@using Common.DataStructure;
@using Common.Utilitary;

@inject Blazored.SessionStorage.ISessionStorageService session

<PageTitle>Garden</PageTitle>

<AuthorizeView>
    <NotAuthorized>
        <h1 class="text-center">Please login to use the cart</h1>
    </NotAuthorized>
    <Authorized>
		<p>This is the garden page</p>
		<div>
			@foreach (List<Product> list in Items)
			{
				<div class="row">
					@foreach (Product prod in list)
					{
						<Frontend.Shared.Components.Card Name="@prod.Name" Description="@prod.Description" Discount="@prod.Discount" Price="prod.Price" ImageBase64="@prod.ImageBase64" Tags="@String.Join(",",prod.Tags)" />
					}
				</div>
			}


		</div>
		
    </Authorized>
</AuthorizeView>


