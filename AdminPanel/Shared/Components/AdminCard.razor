
<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <h3>@ID</h3>
    </div>
    @*<img class="card-img-top imageThumbnail" src="Images/chair1.jpg" />*@
    <div class="card-body text-center">Name: @Name</div>
    <div class="card-body text-center">Description: @Description</div>
    <div class="card-body text-center">Price: @Price</div>
    <div class="card-body text-center">Discount: @Discount</div>

    <div class="card-footer text-center">
        <Button class="btn btn-primary m-1" @onclick="EditItem">Add to  cart</Button>
        <Button class="btn btn-danger m-1" @onclick="RemoveItem">Add to  cart</Button>
    </div>
</div>
@code {
    [Parameter]
    public string ID { get; set; } = "";
    [Parameter]
    public string Name { get; set; } = "";
    [Parameter]
    public string Description { get; set; } = "";
    [Parameter]
    public int Price { get; set; }
    [Parameter]
    public int Discount { get; set; }

    public void EditItem()
    {
        
    }
    public void RemoveItem()
    {
        
    }
}